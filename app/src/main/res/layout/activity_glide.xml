<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.glide.GlideActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bt_clear"
            android:columnCount="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/bt1"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="缩放淡入淡出"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/bt2"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="动图不动"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/bt3"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="target加载"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.fzzz.mydemo.ui.glide.CustomGlideView
                    android:id="@+id/iv4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/bt4"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="自定义加载"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv5"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/bt5"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="动图加载"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv6"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/bt6"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="圆形"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv7"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/bt7"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="模糊"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv8"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/bt8"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="正方形"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv9"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/bt9"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Glide圆形"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv10"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/bt10"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GlideApp圆角"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv11"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/bt11"
                    style="@style/button_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="加载https"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="11sp" />
            </LinearLayout>

        </GridLayout>

        <Button
            android:id="@+id/bt_clear"
            style="@style/button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:text="清空"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="11sp" />
    </RelativeLayout>
</ScrollView>
